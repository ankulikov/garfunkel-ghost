<div class="menu-social">
    <!--//TODO: use facebook and twitter options-->
    <ul id="menu-social-items" class="menu-items">
        {{#if @blog.facebook}}
            <li>
                <a href="{{facebook_url @blog.facebook}}" target="_blank" rel="noopener"><span
                        class="screen-reader-text">Facebook</span></a>
            </li>
        {{/if}}
        {{#if @blog.twitter}}
            <li>
                <a href="{{twitter_url @blog.twitter}}" target="_blank"
                   rel="noopener"><span class="screen-reader-text">Twitter</span></a>
            </li>
        {{/if}}
        <li><a
                href="http://www.instagram.com/andersnoren1"><span
                class="screen-reader-text">Instagram</span></a>
        </li>
        <li><a
                href="https://feedly.com/i/subscription/feed/{{@blog.url}}/rss/"><span
                class="screen-reader-text" rel="noopener">Rss</span></a>
        </li>
    </ul>
</div>
